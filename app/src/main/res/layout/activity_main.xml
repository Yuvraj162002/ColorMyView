<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/BoxOne"
        android:layout_width="430dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:onClick="ClickOnBoxFirst"
        android:text="BOX1"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/BoxThree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BoxTwo"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:onClick="ClickOnBoxTwo"
        android:text="BOX2"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/RED"
        app:layout_constraintEnd_toStartOf="@+id/BoxFour"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BoxOne"
        app:layout_constraintVertical_bias="0.124" />

    <TextView
        android:id="@+id/BoxFour"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:onClick="ClickOnBoxFour"
        android:text="BOX4"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/BoxFive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/BoxTwo"
        app:layout_constraintTop_toBottomOf="@+id/BoxThree" />

    <TextView
        android:id="@+id/BoxFive"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:onClick="ClickOnBoxFive"
        android:text="BOX5"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/BoxTwo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

    <Button
        android:id="@+id/RED"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:onClick="RedBtton"
        android:text="@string/red"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#C80E0E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/YELLOW"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.905" />

    <Button
        android:id="@+id/YELLOW"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:onClick="YellowButton"
        android:text="@string/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#F4C20C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/GREEN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/RED"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

    <Button
        android:id="@+id/GREEN"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:onClick="GreenButton"
        android:text="@string/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#0DE831"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/YELLOW"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.902" />

    <TextView
        android:id="@+id/BoxThree"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:onClick="ClickOnBoxThree"
        android:text="BOX3"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/BoxFour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toEndOf="@+id/BoxTwo"
        app:layout_constraintTop_toBottomOf="@+id/BoxOne" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:onClick="ClickOnTextView"
        android:text="@string/textview"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/GREEN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BoxFive"
        app:layout_constraintVertical_bias="0.777" />

</androidx.constraintlayout.widget.ConstraintLayout>

